{
  "name": "wdv349-cruznicholas-fs",
  "version": "1.0.0",
  "engines": {
    "node": "16.15.0"
  },
  "main": "index.js",
  "scripts": {
    "install-reactjs": "npm install --prefix exercise-buddy",
    "install-api": "npm install --prefix api",
    "build-reactjs": "npm run build --prefix exercise-buddy",
    "heroku-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\";",
    "start": "npm start --prefix api",
    "dev": "concurrently --raw \"npm run api\" \"npm run react\"",
    "react": "cd exercise-buddy && npm run start",
    "api": "cd api; nodemon server.js"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}