{
  "name": "wdv349-cruznicholas-fs",
  "version": "1.0.0",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "install-api": "npm install --prefix api",
    "server": "npm run install-api && cd api; nodemon server.js",
    "react": "npm run clientinstall && cd exercise-buddy && npm run start",
    "client": "npm start --prefix exercise-buddy",
    "clientinstall": "npm install --prefix exercise-buddy",
    "dev": "concurrently \"npm run server\" \"npm run react\"",
    "render-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\";"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}